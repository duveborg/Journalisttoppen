doctype 5

include common/moreButton

html
  head
    title #{title}
    meta(name='description', content='Vilken av Sveriges journalister är hetast just nu? kolla här!')
    meta(name='keywords', content='topplista, journalister, journalist, journalisttoppen, nyheter, artiklar, artikel')

    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/bootstrap-responsive.min.css')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Cinzel')

    script(src='http://code.jquery.com/jquery-1.9.1.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/script.js')
    link(rel='shortcut icon', href='/favicon.gif')

  body

    #fb-root

    script
