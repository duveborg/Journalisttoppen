      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));


    .container

      a(href='/').page-head
        h1.centered Journalisttoppen

      div(style="border-bottom: 1px solid black; margin-bottom: 50px")

      .row.nav-row
        .span3
          a(href='/journalister').btn.btn-large.btn-block
            i.icon-signal
            |  Journalister
        .span3
          a(href='/artiklar').btn.btn-large.btn-block
            i.icon-signal
            |  Artiklar
        .span3
          a(href='/sajter').btn.btn-large.btn-block
            i.icon-signal
            |  Sajter
        .span3
          a(href='/rosta').btn.btn-large.btn-block
            i.icon-thumbs-up
            |  Rösta



      block content


      .page-foot
        div.pull-left
          div(data-href='http://journalisttoppen.se', data-layout='button_count', data-width='200').fb-like
        p.pull-right
          a(href='http://branch.com/b/journalisttoppen-feedback', target='_blank').muted Ge feedback
          |&nbsp;|&nbsp;
          a(href='http://twitter.com/duveborg', target='_blank').muted duveborg@twitter, kontakta mig!




